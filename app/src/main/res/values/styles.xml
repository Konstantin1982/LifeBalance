<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="BlueButton" parent="Widget.AppCompat.Button.Colored">
        <item name="background">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="HeaderText">
        <item name="android:textColor">@color/colorAccentLight</item>
        <item name="android:textSize">24dp</item>
        <item name="android:fontFamily">@font/abel</item>
    </style>

    <style name="WishListHeaderText">
        <item name="android:textColor">@color/colorAccentLight</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/abel</item>
    </style>

    <style name="WishListStepNumberText">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="HeaderTextDark" parent="HeaderText">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="SmallText">
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="ExtraSmallText">
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:textSize">8dp</item>
    </style>

    <style name="defaultText">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="defaultHintText" parent="defaultText">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="defaultHintHeaderText" parent="defaultText">
        <item name="android:textSize">24dp</item>
    </style>

    <style name="wishText">
        <item name="android:textColor">@color/colorAccentLight</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="situationText">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="helpText">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="helpTextHeader">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="wishTextDark">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="LightCheckBox" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorAccentLight</item>
        <item name="android:textSize">14dp</item>
        <item name="colorControlNormal">@color/colorAccentLight</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
